<%= form_for(@capsule_class) do |f| %>
  <% if @capsule_class.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@capsule_class.errors.count, "error") %> prohibited this capsule_class from being saved:</h2>

      <ul>
      <% @capsule_class.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :starting_date %><br>
    <%= f.date_select :starting_date , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :duration %><br>
    <%= f.text_field :duration, class: "form-control" %>
  </div>
  <div class="form-group">
  <h4>Split with "*"</h4>
    <%= f.label :benifits %><br>
    <%= f.text_area :benifits , class: "form-control", rows: 5%>
  </div>
  <div class="form-group">
  <h4>Split with "," and for further indenting "*"</h4>
  <p>ex: Abhinav*Appsclay Founder, Riya*Appsclay Co-Founder </p>
  <p><strong>Resulting:</strong></p>
  <p>Abhinav&nbsp;&nbsp;(Appsclay Founder)</p>
  <p>Riya&nbsp;&nbsp;(Appsclay Co-Founder)</p>
    <%= f.label :guest_lecturer %><br>
    <%= f.text_field :guest_lecturer , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :display %><br>
    <%= f.check_box :display , class: "form-control"%>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-success"%>
  </div>
<% end %>
